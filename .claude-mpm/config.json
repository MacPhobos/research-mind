{
  "version": "1.0",
  "memory": {
    "provider": "kuzu-memory",
    "auto_enhance": true,
    "async_learning": true,
    "project_root": "/Users/mac/workspace/research-mind"
  },
  "hooks": {
    "pre_response": [
      "/Users/mac/.local/pipx/venvs/kuzu-memory/bin/kuzu-memory enhance"
    ],
    "post_response": [
      "/Users/mac/.local/pipx/venvs/kuzu-memory/bin/kuzu-memory learn --quiet"
    ]
  },
  "settings": {
    "max_context_size": 5,
    "similarity_threshold": 0.7,
    "temporal_decay": true
  }
}